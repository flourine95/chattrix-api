# =============================================================================
# Chattrix API Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control
#
# Note: You can also set these as system environment variables instead of using .env
# =============================================================================

# =============================================================================
# AGORA RTC CONFIGURATION
# =============================================================================
# Get your credentials from: https://console.agora.io/

# Required: Your Agora App ID
AGORA_APP_ID=your_agora_app_id_here

# Required: Your Agora App Certificate (enable in project settings)
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# Optional: Token expiration settings (in seconds)
AGORA_DEFAULT_TOKEN_EXPIRATION=3600
AGORA_MAX_TOKEN_EXPIRATION=86400
AGORA_MIN_TOKEN_EXPIRATION=60

# =============================================================================
# CALL CONFIGURATION
# =============================================================================
# Optional: Call timeout and duration settings (in seconds)
CALL_TIMEOUT_SECONDS=60
CALL_MAX_DURATION_SECONDS=14400

# =============================================================================
# WILDFLY ADMIN CONSOLE
# =============================================================================
# Credentials for WildFly Management Console (http://localhost:9990)
WILDFLY_ADMIN_USER=admin
WILDFLY_ADMIN_PASSWORD=admin123

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Required: JWT secret key for signing tokens
# Generate a strong key: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_use_openssl_rand_base64_64

# Optional: Token expiration settings
JWT_ACCESS_EXPIRATION_MINUTES=15
JWT_REFRESH_EXPIRATION_DAYS=7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Optional: Database connection settings (defaults to localhost)
DB_URL=jdbc:postgresql://localhost:5432/chattrix
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here

# =============================================================================
# EMAIL CONFIGURATION (Gmail SMTP)
# =============================================================================
# Get app password from: https://myaccount.google.com/apppasswords

# Optional: SMTP settings (defaults to Gmail)
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_SMTP_STARTTLS_ENABLE=true
MAIL_SMTP_AUTH=true

# Required for email functionality: Gmail credentials
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here

# Optional: From address settings
MAIL_FROM=noreply@chattrix.com
MAIL_FROM_NAME=Chattrix

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Optional: Application settings
APP_BASE_URL=http://localhost:8080
APP_NAME=Chattrix
APP_ENVIRONMENT=dev

# API Base URL for QR codes and external links
# Use your ngrok URL when exposing API publicly
# Example: https://your-subdomain.ngrok.io
API_BASE_URL=http://localhost:8080

# =============================================================================
# CLOUDINARY CONFIGURATION (Optional - for file uploads)
# =============================================================================
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
